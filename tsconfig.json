{
  "compilerOptions": {
    /* Lenguaje y M贸dulos */
    "target": "ES2022",                                  
    "module": "CommonJS",                                
    "moduleResolution": "node",                          

    /* Ubicaci贸n de archivos */
    "rootDir": "./src",                                  
    "outDir": "./dist",                                  

    /* Interoperabilidad y compatibilidad */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Verificaciones estrictas de tipo (Ideal para Clean Architecture) */
    "strict": true,                                      
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,

    /* Optimizaci贸n de compilaci贸n */
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}